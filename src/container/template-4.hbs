
<header class="header row g-0">
  <div >
    {{> logo1}}
  </div>

  <nav class="header_nav ">
    <div class="header_nav_right">
      {{> nav list=header }}
    </div>
  </nav>
</header>

{{#with main}}
  <div class="main">
    <img src="{{image}}" alt="main image" class="main_image">
    <div class="main_content">
      <h1 class="main_title">{{heading}}</h1>
      <p class="main_text">{{descriotion}}</p>
      <a class="button main_button" href="{{href}}">{{button}}</a>
    </div>
  </div>
{{/with}}

<main class="blog">
  {{#each featured}}
    {{> cardFeatured data=this}}
  {{/each}}
</main>
<div class="form">
  {{#each actions}}
    <div class="form_content">
      <h3 class="form_title">{{heading}}</h3>
      <a class="button form_button" href="{{url}}">{{text}}</a>
    </div>
  {{/each}}
</div>

<footer class="row footer">
  <div class="col-3">
    {{> logo1}}
    <span class="footer_copyright">Â© 2023</span>
  </div>

  {{#each footer}}
    <div class="col-3">
      <span class="footer_title">{{title}}</span>
      {{> nav list=links isVertical=true}}
    </div>
  {{/each}}
</footer>